<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>text</th>
      <th>description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.text %></td>
        <td><%= comment.description %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= button_to 'Destroy', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, remote: :true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', posts_path %>

