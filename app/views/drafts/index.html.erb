<p id="notice"><%= notice %></p>
<%= button_to "logout", destroy_user_session_path, method: :delete  %>
<h1>Drafts</h1>

<table>
  <thead>
    <tr>
      <th>Attachment</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drafts.each do |draft| %>
      <tr>
        <td><%= draft.attachment %></td>
        <td><%= draft.content %></td>
        <td><%= link_to 'Show', draft %></td>
        <td><%= button_to 'Destroy', draft_path(draft), method: :delete, data: { confirm: 'Are you sure?' }, remote: :true%></td>
        <td><%= link_to 'Edit', edit_draft_path(draft) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
